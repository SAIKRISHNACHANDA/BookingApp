<%- include('partials/header') %>

    <style>
        body {
            background-color: #f8fafc;
            /* Very soft sophisticated background */
        }

        .booking-page-wrapper {
            padding: 2rem 1rem 5rem;
            display: flex;
            justify-content: center;
            align-items: center;
            /* keep centered but need flex-col */
            flex-direction: column;
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
            min-height: calc(100vh - 80px);
            gap: 1.5rem;
        }

        .booking-nav-header {
            max-width: 1080px;
            width: 100%;
            display: flex;
            align-items: center;
        }

        .floating-back-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: #64748b;
            font-weight: 500;
            font-size: 0.95rem;
            text-decoration: none;
            padding: 0.5rem 0.75rem;
            border-radius: 8px;
            transition: all 0.2s;
            margin-left: -0.75rem;
            /* align optically */
        }

        .floating-back-btn:hover {
            color: #0f172a;
            background: #f1f5f9;
        }

        .booking-widget {
            background: #ffffff;
            border-radius: 20px;
            box-shadow: 0 20px 60px -15px rgba(0, 0, 0, 0.05);
            border: 1px solid #e2e8f0;
            max-width: 1080px;
            width: 100%;
            display: flex;
            overflow: hidden;
            min-height: 560px;
        }

        .host-info-sidebar {
            width: 320px;
            background: #ffffff;
            border-right: 1px solid #f1f5f9;
            padding: 2.5rem 2rem;
            display: flex;
            flex-direction: column;
            flex-shrink: 0;
        }

        .host-avatar {
            width: 64px;
            height: 64px;
            border-radius: 50%;
            background: linear-gradient(135deg, #4f46e5 0%, #3b82f6 100%);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            box-shadow: 0 8px 16px rgba(79, 70, 229, 0.25);
        }

        .host-name {
            font-size: 1.5rem;
            color: #0f172a;
            font-weight: 700;
            margin-bottom: 0.5rem;
            letter-spacing: -0.02em;
        }

        .host-bio {
            color: #64748b;
            font-size: 0.95rem;
            line-height: 1.6;
            margin-bottom: 2rem;
        }

        .session-detail-item {
            display: flex;
            align-items: center;
            gap: 0.85rem;
            color: #475569;
            font-weight: 500;
            font-size: 0.95rem;
            margin-bottom: 1rem;
        }

        .session-icon {
            color: #4f46e5;
            background: #eff6ff;
            padding: 0.5rem;
            border-radius: 8px;
            display: flex;
        }

        .booking-content {
            flex: 1;
            padding: 2.5rem 3rem;
            display: flex;
            flex-direction: column;
            background: #ffffff;
        }

        .calendar-layout {
            display: flex;
            gap: 3.5rem;
            flex: 1;
        }

        .calendar-left {
            flex: 1.2;
            max-width: 380px;
        }

        .calendar-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .calendar-header h2 {
            font-size: 1.15rem;
            color: #0f172a;
            font-weight: 600;
            text-align: center;
        }

        .nav-btn {
            background: #ffffff;
            border: 1px solid #e2e8f0;
            cursor: pointer;
            color: #64748b;
            font-size: 1rem;
            transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
            display: flex;
            align-items: center;
            justify-content: center;
            width: 36px;
            height: 36px;
            border-radius: 8px;
        }

        .nav-btn:hover {
            background: #f8fafc;
            border-color: #cbd5e1;
            color: #0f172a;
            transform: scale(1.05);
        }

        .calendar-grid {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 0.25rem;
            text-align: center;
        }

        .weekday {
            font-size: 0.75rem;
            font-weight: 600;
            color: #64748b;
            padding-bottom: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .day {
            width: 42px;
            height: 42px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
            border-radius: 50%;
            cursor: pointer;
            font-size: 0.95rem;
            color: #94a3b8;
            transition: all 0.2s ease;
            position: relative;
            background: transparent;
            border: 2px solid transparent;
        }

        .day.empty {
            cursor: default;
        }

        .day.available {
            color: #4f46e5 !important;
            font-weight: 600;
            background: #eff6ff !important;
        }

        .day.available:hover {
            background: #dbeafe !important;
            color: #4338ca !important;
            transform: scale(1.05);
        }

        .day.today {
            color: #4f46e5;
            font-weight: 700;
        }

        .day.today::after {
            content: '';
            position: absolute;
            bottom: 6px;
            left: 50%;
            transform: translateX(-50%);
            width: 4px;
            height: 4px;
            border-radius: 50%;
            background: #4f46e5;
            pointer-events: none;
        }

        .day.selected {
            background-color: #4f46e5 !important;
            color: white !important;
            border-color: transparent !important;
            transform: scale(1.05);
            z-index: 10;
            box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3);
        }

        .day.selected::after {
            display: none;
        }

        .time-slots {
            flex: 1;
            padding-left: 2rem;
            border-left: 1px solid #f1f5f9;
            display: flex;
            flex-direction: column;
        }

        .slots-header {
            font-weight: 600;
            margin-bottom: 1.5rem;
            color: #0f172a;
            font-size: 1.15rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        #slotsList {
            display: grid;
            grid-template-columns: 1fr;
            gap: 0.85rem;
            max-height: 380px;
            overflow-y: auto;
            padding: 4px 8px 4px 4px;
            margin-right: -8px;
        }

        #slotsList::-webkit-scrollbar {
            width: 4px;
        }

        #slotsList::-webkit-scrollbar-thumb {
            background: #e2e8f0;
            border-radius: 4px;
        }

        .slot-btn {
            width: 100%;
            padding: 1rem;
            border: 1px solid #c7d2fe;
            background: white;
            color: #4f46e5;
            border-radius: 12px;
            cursor: pointer;
            font-weight: 600;
            font-size: 0.95rem;
            transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .slot-btn:hover {
            border-color: #4f46e5;
            background: #4f46e5;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 8px 16px rgba(79, 70, 229, 0.15);
        }

        .timezone-footer {
            margin-top: 2.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            color: #64748b;
            font-size: 0.85rem;
            font-weight: 500;
            padding-top: 1.5rem;
            border-top: 1px solid #f1f5f9;
        }

        .globe-icon {
            color: #94a3b8;
            font-size: 1.1rem;
        }

        @media (max-width: 900px) {
            .booking-page-wrapper {
                padding: 1rem;
            }

            .booking-widget {
                flex-direction: column;
                max-width: 500px;
            }

            .host-info-sidebar {
                width: 100%;
                border-right: none;
                border-bottom: 1px solid #e2e8f0;
                padding: 2rem;
            }

            .calendar-layout {
                flex-direction: column;
                gap: 2rem;
            }

            .calendar-left {
                width: 100%;
                max-width: none;
            }

            .time-slots {
                padding-left: 0;
                border-left: none;
                padding-top: 0;
            }

            .booking-content {
                padding: 2rem;
            }

            #bookingSummary {
                width: calc(100% - 2rem) !important;
                right: 1rem !important;
                bottom: 1rem !important;
                left: 1rem !important;
            }
        }
    </style>

