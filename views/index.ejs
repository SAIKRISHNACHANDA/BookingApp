                                    <div class="verified-badge">‚úì</div>
                            </div>
                        </div>

                        <!-- Body -->
                        <div class="card-body">
                            <h3 class="expert-name">
                                <%= host.name %>
                            </h3>
                            <div class="expert-role">Expert Mentor</div>
                            <p class="expert-bio">
                                <%= host.bio
                                    || 'Experienced professional dedicated to helping you achieve your career goals through personalized mentorship.'
                                    %>
                            </p>

                            <div class="card-footer">
                                <div class="price-tag">
                                    <span class="price-label">Session Price</span>
                                    <span class="price-value">
                                        <%= host.currency %>
                                            <%= host.hourlyRate %>
                                    </span>
                                </div>
                                <a href="/hosts/<%= host.username %>" class="btn-book">Book Now</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <div class="text-center"
                                style="grid-column: 1/-1; padding: 6rem 2rem; background: #f8fafc; border-radius: 24px;">
                                <div style="font-size: 4rem; margin-bottom: 1.5rem;">üå±</div>
                                <h3 style="font-size: 1.5rem; font-weight: 700; color: #0f172a; margin-bottom: 0.5rem;">
                                    No experts found yet</h3>
                                <p style="color: #64748b; margin-bottom: 2rem;">Be the first to join our platform and
                                    share your expertise.</p>
                                <a href="/signup" class="btn btn-primary"
                                    style="padding: 1rem 2rem; font-size: 1.1rem;">Become a Host</a>
                            </div>
                            <% } %>
        </div>
    </div>

