<%- include('partials/header') %>

    <div class="container fade-in" style="max-width: 800px; margin-top: 4rem;">
        <div class="card" style="position: relative; overflow: hidden; padding: 0;">
            <div
                style="position: absolute; top: 0; left: 0; width: 100%; height: 6px; background: var(--primary-gradient);">
            </div>

            <style>
                .checkout-col {
                    padding: 2.5rem;
                }

                @media (max-width: 768px) {
                    .checkout-col {
                        padding: 1.5rem;
                    }
                }
            </style>
            <div class="grid grid-2" style="gap: 0;">
                <!-- Left: Booking Details -->
                <div class="checkout-col"
                    style="background: var(--background-color); border-right: 1px solid var(--border-color);">
                    <h2 class="mb-1" style="font-size: 1.5rem;">Booking Details</h2>

                    <div class="mb-1"
                        style="background: white; padding: 1rem; border-radius: var(--radius-sm); border: 1px solid var(--border-color);">
                        <div class="text-light text-sm mb-0.5">Host</div>
                        <div class="font-semibold" style="font-size: 1.1rem;">
                            <%= host.name %>
                        </div>
                    </div>

                    <div class="mb-1"
                        style="background: white; padding: 1rem; border-radius: var(--radius-sm); border: 1px solid var(--border-color);">
                        <div class="text-light text-sm mb-0.5">Date & Time</div>
                        <div class="font-semibold">
                            <%= start %>
                        </div>
                    </div>

                    <div
                        style="background: white; padding: 1rem; border-radius: var(--radius-sm); border: 1px solid var(--border-color);">
                        <div class="text-light text-sm mb-0.5">Duration</div>
                        <div class="font-semibold">
                            <%= duration %> Minutes
                        </div>
                    </div>

                    <% if (!isFree) { %>
                        <div class="currency-selection mt-2">
                            <style>
                                .currency-card {
                                    border: 2px solid var(--border-color);
                                    border-radius: var(--radius-sm);
                                    padding: 1rem;
                                    cursor: pointer;
                                    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
                                    flex: 1;
                                    text-align: center;
                                    background: white;
                                    position: relative;
                                }

                                .currency-card:hover {
                                    border-color: var(--primary-light);
                                    transform: translateY(-2px);
                                    box-shadow: var(--shadow-sm);
                                }

                                .currency-card.selected-currency {
                                    border-color: var(--primary-color);
                                    background-color: #eff6ff;
                                    box-shadow: var(--shadow);
                                }

                                .check-icon {
                                    display: none;
                                    position: absolute;
                                    top: 8px;
                                    right: 8px;
                                    color: var(--primary-color);
                                    font-size: 1.1rem;
                                }

                                .selected-currency .check-icon {
                                    display: block;
                                }
                            </style>

                            <p class="mb-1 text-sm font-semibold text-light uppercase" style="letter-spacing: 0.05em;">
                                Select Currency</p>
                            <div class="flex gap-1">
                                <div id="card-INR" class="currency-card selected-currency"
                                    onclick="selectCurrency('INR')">
                                    <div class="check-icon">âœ“</div>
                                    <h3 style="margin: 0; color: var(--text-color); font-size: 1.5rem;">â‚¹<%=
                                            amount.toFixed(2) %>
                                    </h3>
                                    <small class="text-light">INR</small>
                                </div>
                                <div id="card-USD" class="currency-card" onclick="selectCurrency('USD')">
                                    <div class="check-icon">âœ“</div>
                                    <h3 style="margin: 0; color: var(--text-color); font-size: 1.5rem;">$<%=
                                            amountUsd.toFixed(2) %>
                                    </h3>
                                    <small class="text-light">USD</small>
                                </div>
                            </div>
                        </div>
                        <% } else { %>
                            <div class="mt-2 text-center p-2"
                                style="background: #ecfdf5; color: #047857; border-radius: var(--radius-sm);">
                                <strong style="font-size: 1.25rem;">FREE SESSION</strong>
                            </div>
                            <% } %>
                </div>

                <!-- Right: Contact & Payment -->
                <div class="checkout-col">
                    <h2 class="mb-1" style="font-size: 1.5rem;">Your Information</h2>
                    <p class="text-light text-sm mb-1">Pass your details for the booking confirmation.</p>

                    <div class="form-group">
                        <label for="customerName">Full Name</label>
                        <input type="text" id="customerName" placeholder="John Doe" value="<%= user ? user.name : '' %>"
                            required>
                    </div>

                    <div class="form-group">
                        <label for="customerEmail">Email Address</label>
                        <input type="email" id="customerEmail" placeholder="john@example.com"
                            value="<%= user ? user.email : '' %>" required>
                    </div>

                    <div class="form-group">
                        <label for="customerWhatsapp">WhatsApp Number</label>
                        <input type="tel" id="customerWhatsapp" placeholder="+91 9876543210" required>
                    </div>

                    <% if (!isFree) { %>
                        <div class="gateway-selection mt-2 mb-2">
                            <p class="mb-1 text-sm font-semibold text-light uppercase" style="letter-spacing: 0.05em;">
                                Payment Method</p>

                            <style>
                                .gateway-option {
                                    display: flex;
                                    align-items: center;
                                    padding: 1rem;
                                    border: 1px solid var(--border-color);
                                    border-radius: var(--radius-sm);
                                    margin-bottom: 0.75rem;
                                    cursor: pointer;
                                    transition: all 0.2s;
                                }

                                .gateway-option:hover {
                                    border-color: var(--primary-light);
                                    background: #f8fafc;
                                }

                                .gateway-option.selected {
                                    border-color: var(--primary-color);
                                    background: #eff6ff;
                                    box-shadow: 0 0 0 1px var(--primary-color);
                                }

                                .gateway-radio {
                                    margin-right: 1rem;
                                    accent-color: var(--primary-color);
                                    transform: scale(1.2);
                                }
                            </style>

                            <div class="gateway-option selected" onclick="selectGateway('razorpay')">
                                <input type="radio" id="razorpay" name="gateway" value="razorpay" checked
                                    class="gateway-radio">
                                <div>
                                    <label for="razorpay"
                                        style="margin: 0; cursor: pointer; font-weight: 600;">Razorpay</label>
                                    <div class="text-sm text-light">Cards, UPI, NetBanking</div>
                                </div>
                            </div>

                            <div class="gateway-option" onclick="selectGateway('payu')">
                                <input type="radio" id="payu" name="gateway" value="payu" class="gateway-radio">
                                <div>
                                    <label for="payu" style="margin: 0; cursor: pointer; font-weight: 600;">PayU</label>
                                    <div class="text-sm text-light">Secure Checkout</div>
                                </div>
                            </div>
                        </div>
                        <% } %>

                            <button id="rzp-button1" class="btn btn-primary w-full"
                                style="font-size: 1.1rem; padding: 1rem; margin-top: 1rem;">Confirm & Pay</button>

                            <div class="mt-1 text-center text-sm text-light">
                                <span style="opacity: 0.7;">ðŸ”’ Secure Payment Processing</span>
                            </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <script>
        let selectedCurrency = 'INR';

        function selectCurrency(currency) {
            selectedCurrency = currency;
            document.querySelectorAll('.currency-card').forEach(el => el.classList.remove('selected-currency'));
            document.getElementById('card-' + currency).classList.add('selected-currency');
        }

        function selectGateway(gateway) {
            document.querySelectorAll('input[name="gateway"]').forEach(el => el.checked = false);
            document.getElementById(gateway).checked = true;

            document.querySelectorAll('.gateway-option').forEach(el => el.classList.remove('selected'));
            document.getElementById(gateway).closest('.gateway-option').classList.add('selected');

            updateButtonText();
        }

        function updateButtonText() {
            const gateway = document.querySelector('input[name="gateway"]:checked')?.value;
            const btn = document.getElementById('rzp-button1');
            if (gateway === 'payu') {
                btn.innerText = 'Pay with PayU';
            } else {
                btn.innerText = 'Pay & Book';
            }
        }

        function resetButton(btn, text) {
            btn.innerText = text;
            btn.disabled = false;
            btn.style.opacity = '1';
        }

        document.getElementById('rzp-button1').onclick = async function (e) {
            e.preventDefault();

            const name = document.getElementById('customerName').value;
            const email = document.getElementById('customerEmail').value;
            const whatsapp = document.getElementById('customerWhatsapp').value;

            if (!name || !email || !whatsapp) {
                alert('Please fill in all details (Name, Email, WhatsApp Number)');
                return;
            }

            const btn = document.getElementById('rzp-button1');
            const originalText = btn.innerText;
            const gateway = document.querySelector('input[name="gateway"]:checked')?.value || 'razorpay';

            btn.innerText = 'Processing...';
            btn.disabled = true;
            btn.style.opacity = '0.7';

            const payload = {
                hostId: '<%= host._id %>',
                startTime: '<%= startTime %>',
                endTime: '<%= endTime %>',
                currency: selectedCurrency,
                customerName: name,
                customerEmail: email,
                customerWhatsapp: whatsapp
            };

            try {
                if (gateway === 'payu') {
                    // --- PAYU FLOW ---
                    const res = await fetch('/bookings/create-payu-order', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    const data = await res.json();

                    if (data.error) {
                        alert(data.error);
                        resetButton(btn, originalText);
                        return;
                    }

                    if (data.success && data.action) {
                        // Create hidden form and submit
                        const form = document.createElement('form');
                        form.method = 'POST';
                        form.action = data.action;

                        for (const key in data.params) {
                            const input = document.createElement('input');
                            input.type = 'hidden';
                            input.name = key;
                            input.value = data.params[key];
                            form.appendChild(input);
                        }

                        document.body.appendChild(form);
                        form.submit();
                        return; // Done
                    }

                } else {
                    // --- RAZORPAY FLOW ---
                    const res = await fetch('/bookings/create-order', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    const data = await res.json();

                    if (data.error) {
                        alert(data.error);
                        resetButton(btn, originalText);
                        return;
                    }

                    if (data.isFree) {
                        window.location.href = '/bookings/success';
                        return;
                    }

                    var options = {
                        "key": data.key_id,
                        "amount": data.order.amount,
                        "currency": data.order.currency,
                        "name": "Gurubrahma",
                        "description": "Session Booking",
                        "order_id": data.order.id,

                        // âœ… redirect: true â€” Razorpay redirects to callback_url
                        // for ALL payment methods: UPI QR, mobile, cards, netbanking
                        // This is more reliable than the handler for external payments
                        "redirect": true,
                        "callback_url": window.location.origin + "/bookings/verify-payment-redirect?booking_id=" + data.bookingId,

                        "prefill": {
                            "name": name,
                            "email": email,
                            "contact": whatsapp
                        },
                        "theme": { "color": "#4f46e5" },
                        "modal": {
                            "ondismiss": function () {
                                resetButton(btn, originalText);
                            }
                        }
                    };
                    var rzp1 = new Razorpay(options);
                    rzp1.open();
                }

            } catch (err) {
                console.error(err);
                alert('An error occurred. Please try again.');
                resetButton(btn, originalText);
            }
        }
    </script>

    <%- include('partials/footer') %>