    <!-- CTA Section -->
    <section style="margin: 0 0 2rem;">
        <style>
            @keyframes cta-gradient {
                0% {
                    background-position: 0% 50%;
                }

                50% {
                    background-position: 100% 50%;
                }

                100% {
                    background-position: 0% 50%;
                }
            }

            @keyframes cta-glow-pulse {

                0%,
                100% {
                    opacity: 0.5;
                    transform: scale(1);
                }

                50% {
                    opacity: 0.8;
                    transform: scale(1.1);
                }
            }

            .cta-card {
                position: relative;
                background: linear-gradient(-45deg, #0a0718, #12093a, #080e2a, #150826);
                background-size: 300% 300%;
                animation: cta-gradient 12s ease infinite;
                border-radius: 16px;
                padding: 5.5rem 2rem;
                text-align: center;
                overflow: hidden;
            }

            .cta-glow {
                position: absolute;
                width: 600px;
                height: 400px;
                background: radial-gradient(ellipse, rgba(99, 75, 230, 0.3) 0%, transparent 70%);
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                pointer-events: none;
                animation: cta-glow-pulse 6s ease-in-out infinite;
            }

            .cta-headline-gradient {
                background: linear-gradient(135deg, #ffffff 0%, #c4b5fd 40%, #93c5fd 100%);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
            }

            .cta-btn-primary {
                background: white;
                color: #4f46e5;
                font-weight: 700;
                padding: 1rem 2.5rem;
                border-radius: 12px;
                font-size: 1rem;
                transition: all 0.2s;
                display: inline-block;
                box-shadow: 0 4px 14px rgba(0, 0, 0, 0.15);
                text-decoration: none;
            }

            .cta-btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
            }

            .cta-btn-secondary {
                background: rgba(255, 255, 255, 0.15);
                color: white;
                font-weight: 600;
                padding: 1rem 2.5rem;
                border-radius: 12px;
                font-size: 1rem;
                border: 1px solid rgba(255, 255, 255, 0.3);
                transition: all 0.2s;
                display: inline-block;
                backdrop-filter: blur(8px);
                text-decoration: none;
            }

            .cta-btn-secondary:hover {
                background: rgba(255, 255, 255, 0.25);
            }

            .cta-btn-container {
                display: flex;
                gap: 1rem;
                justify-content: center;
                flex-wrap: wrap;
            }

            @media (max-width: 480px) {
                .cta-btn-container {
                    flex-direction: column;
                }

                .cta-btn-primary,
                .cta-btn-secondary {
                    width: 100%;
                    padding: 1rem 1.5rem;
                    text-align: center;
                }
            }
        </style>
        <div class="cta-card">
            <!-- Radial center glow -->
            <div class="cta-glow"></div>
            <!-- Subtle corner orbs -->
            <div
                style="position:absolute;top:-60px;right:-60px;width:260px;height:260px;background:rgba(139,92,246,0.12);border-radius:50%;pointer-events:none;filter:blur(40px);">
