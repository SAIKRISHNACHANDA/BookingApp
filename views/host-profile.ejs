<%- include('partials/header') %>

    <style>
        .host-profile-header {
            text-align: center;
            padding: 3rem 1rem;
            max-width: 800px;
            margin: 0 auto;
        }

        .host-profile-header h1 {
            font-size: 2.25rem;
            color: #1e293b;
            margin-bottom: 0.75rem;
        }

        .host-profile-header p {
            color: #64748b;
            font-size: 1.1rem;
            line-height: 1.6;
        }

        .calendar-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 10px 40px -10px rgba(0, 0, 0, 0.08);
            border: 1px solid #e2e8f0;
            padding: 2.5rem;
            max-width: 900px;
            margin: 0 auto 5rem;
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
            position: relative;
        }

        .calendar-header {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 2.5rem;
            margin-bottom: 2.5rem;
        }

        .calendar-header h2 {
            font-size: 1.25rem;
            color: #0f172a;
            font-weight: 600;
            min-width: 180px;
            text-align: center;
        }

        .nav-btn {
            background: #f8fafc;
            border: 1px solid #e2e8f0;
            cursor: pointer;
            color: #64748b;
            font-size: 1rem;
            transition: all 0.2s;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 36px;
            height: 36px;
            border-radius: 8px;
        }

        .nav-btn:hover {
            background: #f1f5f9;
            border-color: #cbd5e1;
            color: #0f172a;
            transform: scale(1.05);
        }

        .calendar-grid {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 0.25rem;
            text-align: center;
        }

        .weekday {
            font-size: 0.75rem;
            font-weight: 600;
            color: #64748b;
            padding-bottom: 2rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .day {
            width: 44px;
            height: 44px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: auto;
            border-radius: 50%;
            cursor: pointer;
            font-size: 0.95rem;
            color: #94a3b8;
            transition: all 0.2s ease;
            position: relative;
            background: transparent;
            border: 1px solid transparent;
        }

        .day.empty {
            cursor: default;
        }

        .day.available {
            color: #4f46e5 !important;
            font-weight: 600;
            background: #eff6ff !important;
        }

        .day.available:hover {
            background: #dbeafe !important;
            color: #4338ca !important;
            transform: scale(1.05);
        }

        .day.today {
            color: #4f46e5;
            font-weight: 700;
        }

        .day.today::after {
            content: '';
            position: absolute;
            bottom: 6px;
            left: 50%;
            transform: translateX(-50%);
            width: 4px;
            height: 4px;
            border-radius: 50%;
            background: #4f46e5;
            pointer-events: none;
        }

        .day.selected {
            background-color: #4f46e5 !important;
            color: white !important;
            border-color: transparent !important;
            transform: scale(1.05);
            z-index: 10;
            box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3);
        }

        .day.selected::after {
            display: none;
        }

        .day:hover:not(.empty):not(.disabled):not(.selected) {
            border-color: transparent;
            background-color: #f1f5f9;
            transform: scale(1.05);
            z-index: 5;
        }

        /* Custom Tooltip */
        .day[data-slots]:hover::before {
            content: attr(data-slots) ' slots available';
            position: absolute;
            bottom: 125%;
            left: 50%;
            transform: translateX(-50%);
            background: #1e293b;
            color: #fff;
            padding: 0.5rem 0.75rem;
            border-radius: 6px;
            font-size: 0.75rem;
            white-space: nowrap;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            z-index: 20;
            pointer-events: none;
            opacity: 0;
            animation: tooltip-fade 0.2s ease-out forwards;
        }

        @keyframes tooltip-fade {
            0% {
                opacity: 0;
                transform: translateX(-50%) translateY(5px);
            }

            100% {
                opacity: 1;
                transform: translateX(-50%) translateY(0);
            }
        }

        .day.disabled {
            opacity: 1;
            color: #cbd5e1;
            background: transparent;
            cursor: default;
            border: 2px solid transparent;
            pointer-events: none;
        }

        .time-slots {
            padding-left: 3rem;
            border-left: 1px solid #e2e8f0;
            display: flex;
            flex-direction: column;
        }

        .slots-header {
            font-weight: 700;
            margin-bottom: 1.5rem;
            color: #0f172a;
            font-size: 1.15rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #e2e8f0;
        }

        #slotsList {
            display: grid;
            grid-template-columns: 1fr;
            gap: 0.75rem;
            max-height: 400px;
            overflow-y: auto;
            padding-right: 0.5rem;
        }

        #slotsList::-webkit-scrollbar {
            width: 4px;
        }

        #slotsList::-webkit-scrollbar-thumb {
            background: #e2e8f0;
            border-radius: 4px;
        }

        .slot-btn {
            width: 100%;
            padding: 0.95rem;
            border: 1px solid #c7d2fe;
            background: white;
            color: #4f46e5;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            font-size: 0.95rem;
            transition: all 0.2s ease;
            text-align: center;
        }

        .slot-btn:hover {
            border-color: #4f46e5;
            color: #4f46e5;
            background: #eff6ff;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(79, 70, 229, 0.1);
        }

        .timezone-footer {
            margin-top: 3rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            color: #475569;
            font-size: 0.9rem;
            font-weight: 500;
        }

        .globe-icon {
            color: #1e293b;
            font-size: 1.25rem;
        }

        .calendar-layout {
            grid-template-columns: 1.2fr 1fr;
            gap: 2rem;
        }

        .calendar-left {
            padding-right: 2rem;
        }

        @media (max-width: 768px) {
            .host-profile-header {
                padding: 2rem 1rem;
            }

            .host-profile-header h1 {
                font-size: 1.75rem;
            }

            .calendar-card {
                padding: 1rem;
                margin-bottom: 3rem;
            }

            .calendar-layout {
                grid-template-columns: 1fr;
                gap: 2rem;
            }

            .calendar-left {
                padding-right: 0;
            }

            .calendar-header {
                gap: 1rem;
                margin-bottom: 2rem;
            }

            .calendar-header h2 {
                font-size: 1rem;
                min-width: auto;
            }

            .day {
                border-radius: 8px;
                font-size: 0.9rem;
            }

            .weekday {
                font-size: 0.7rem;
                padding-bottom: 1rem;
            }

            .time-slots {
                padding-left: 0;
                border-left: none;
                border-top: 1px solid #f1f5f9;
                margin-top: 2rem;
                padding-top: 2rem;
            }

            #bookingSummary {
                width: calc(100% - 2rem) !important;
                right: 1rem !important;
                bottom: 1rem !important;
                left: 1rem !important;
            }
        }
    </style>

    <div class="container">
        <div class="host-profile-header">
            <h1>
                <%= host.name %>
            </h1>
            <p>
                <%= host.bio || 'Book a 1:1 session for expert guidance and mentorship.' %>
            </p>
        </div>

        <div class="calendar-card">
            <div class="grid calendar-layout">
                <!-- Left side: Calendar -->
                <div class="calendar-left">
                    <h2
                        style="margin-bottom: 2rem; font-size: 1.25rem; color: #1e293b; font-weight: 700; display: flex; align-items: center; gap: 8px;">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: #4f46e5;">
                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                            <line x1="16" y1="2" x2="16" y2="6"></line>
                            <line x1="8" y1="2" x2="8" y2="6"></line>
                            <line x1="3" y1="10" x2="21" y2="10"></line>
                        </svg>
                        Select a Date & Time
                    </h2>

                    <div class="calendar-header">
                        <button class="nav-btn" onclick="prevMonth()">‚ùÆ</button>
                        <h2 id="monthDisplay">February 2026</h2>
                        <button class="nav-btn" onclick="nextMonth()">‚ùØ</button>
                    </div>

                    <div class="calendar-grid" id="calendarGrid">
                        <div class="weekday">MON</div>
                        <div class="weekday">TUE</div>
                        <div class="weekday">WED</div>
                        <div class="weekday">THU</div>
                        <div class="weekday">FRI</div>
                        <div class="weekday">SAT</div>
                        <div class="weekday">SUN</div>
                        <!-- Days will be injected here -->
                    </div>

                    <div class="timezone-footer">
                        <span class="globe-icon">üåê</span>
                        <strong>Time zone:</strong>
                        <span id="timezoneText">India Standard Time (4:46pm)</span> ‚ñæ
                    </div>
                </div>

                <!-- Right side: Slots -->
                <div id="slotsContainer" class="time-slots">
                    <div id="selectedDateLabel" class="slots-header">Available Slots</div>
                    <div id="slotsList">
                        <p class="text-light">Select a date to view available times.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Booking Summary Modal -->
        <div id="modalBackdrop"
            style="display: none; position: fixed; inset: 0; background: rgba(15, 23, 42, 0.4); backdrop-filter: blur(4px); z-index: 999;"
            onclick="closeModal()"></div>
        <div id="bookingSummary"
            style="display: none; position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 420px; max-width: 90vw; z-index: 1000; background: white; border-radius: 20px; box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25), 0 0 0 1px rgba(0, 0, 0, 0.05); overflow: hidden; animation: modal-pop 0.3s cubic-bezier(0.16, 1, 0.3, 1);">
            <!-- Content injected here -->
        </div>

        <style>
            @keyframes modal-pop {
                0% {
                    opacity: 0;
                    transform: translate(-50%, -45%) scale(0.96);
                }

                100% {
                    opacity: 1;
                    transform: translate(-50%, -50%) scale(1);
                }
            }
        </style>
    </div>

    <script>
        // Use Data Attributes to pass EJS data safely to JS without linting issues
        const HOST_DATA = {
            id: '<%= host._id %>',
            username: '<%= host.username %>',
            rate: parseFloat('<%= host.hourlyRate || 0 %>'),
            currency: '<%= host.currency || "INR" %>'
        };

        let currentMonth = new Date();
        let selectedDate = new Date();
        let selectedSlot = null;
        let MONTH_AVAILABILITY = {};

        window.addEventListener('DOMContentLoaded', async () => {
            await fetchMonthAvailability(currentMonth.getFullYear(), currentMonth.getMonth());
            renderCalendar();
            const tz = Intl.DateTimeFormat().resolvedOptions().timeZone;
            const time = new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit', hour12: true }).toLowerCase().replace(' ', '');
            document.getElementById('timezoneText').innerText = `${tz} (${time})`;
        });

        async function fetchMonthAvailability(year, month) {
            try {
                // console.log(`[fetchMonthAvailability] Fetching for ${year}-${month + 1}`);
                const response = await fetch(`/hosts/api/hosts/${HOST_DATA.username}/month-availability?year=${year}&month=${month}`);
                if (!response.ok) throw new Error('Failed to fetch availability');
                MONTH_AVAILABILITY = await response.json();
                // console.log('[fetchMonthAvailability] Data:', MONTH_AVAILABILITY);
            } catch (err) {
                console.error('Error fetching availability:', err);
                MONTH_AVAILABILITY = {};
            }
        }

        function renderCalendar() {
            const grid = document.getElementById('calendarGrid');
            const monthDisplay = document.getElementById('monthDisplay');

            // Clear previous days
            const dayElements = grid.querySelectorAll('.day');
            dayElements.forEach(el => el.remove());

            const year = currentMonth.getFullYear();
            const month = currentMonth.getMonth();

            monthDisplay.innerText = new Date(year, month).toLocaleString('default', { month: 'long', year: 'numeric' });

            const firstDayOfMonth = new Date(year, month, 1).getDay();
            const daysInMonth = new Date(year, month + 1, 0).getDate();

            // Handle Monday start
            let startDay = firstDayOfMonth === 0 ? 6 : firstDayOfMonth - 1;

            for (let i = 0; i < startDay; i++) {
                const empty = document.createElement('div');
                empty.className = 'day empty';
                grid.appendChild(empty);
            }

            const today = new Date();
            today.setHours(0, 0, 0, 0);

            for (let i = 1; i <= daysInMonth; i++) {
                const dayDate = new Date(year, month, i);
                const dayEl = document.createElement('div');
                dayEl.className = 'day';
                dayEl.innerText = i;

                const dateLocal = dayDate.getFullYear() + '-' + String(dayDate.getMonth() + 1).padStart(2, '0') + '-' + String(dayDate.getDate()).padStart(2, '0');
                const dayOfWeek = dayDate.getDay();

                // Today's style
                if (dayDate.getTime() === today.getTime()) {
                    dayEl.classList.add('today');
                }

                // Selected day style
                if (dayDate.getTime() === selectedDate.getTime()) {
                    dayEl.classList.add('selected');
                }

                // Availability coloring logic
                const availability = MONTH_AVAILABILITY[dateLocal];

                if (dayDate >= today) {
                    if (availability && availability.isAvailable) {
                        dayEl.classList.add('available');
                        dayEl.classList.add('has-slots-dot'); // Dot is handled by CSS
                        dayEl.setAttribute('data-slots', availability.count);
                        dayEl.title = `${availability.count} slots available`;
                        dayEl.onclick = () => selectDate(dayDate, dayEl);
                    } else {
                        dayEl.classList.add('disabled');
                    }
                } else {
                    dayEl.classList.add('disabled');
                }

                grid.appendChild(dayEl);
            }
        }

        async function prevMonth() {
            currentMonth.setMonth(currentMonth.getMonth() - 1);
            await fetchMonthAvailability(currentMonth.getFullYear(), currentMonth.getMonth());
            renderCalendar();
        }

        async function nextMonth() {
            currentMonth.setMonth(currentMonth.getMonth() + 1);
            await fetchMonthAvailability(currentMonth.getFullYear(), currentMonth.getMonth());
            renderCalendar();
        }

        async function selectDate(date, element) {
            document.querySelectorAll('.day').forEach(d => d.classList.remove('selected'));
            element.classList.add('selected');
            selectedDate = date;

            const dateString = date.getFullYear() + '-' + String(date.getMonth() + 1).padStart(2, '0') + '-' + String(date.getDate()).padStart(2, '0');
            const displayDate = date.toLocaleDateString('default', { weekday: 'long', month: 'long', day: 'numeric' });
            document.getElementById('selectedDateLabel').innerText = displayDate;

            const slotsList = document.getElementById('slotsList');
            slotsList.innerHTML = '<p class="loading">Finding available times...</p>';

            try {
                const response = await fetch(`/hosts/api/hosts/${HOST_DATA.username}/availability?date=${dateString}`);
                const data = await response.json();

                if (data.slots && data.slots.length > 0) {
                    slotsList.innerHTML = '';
                    data.slots.forEach(slot => {
                        const btn = document.createElement('button');
                        btn.className = 'slot-btn';
                        btn.innerText = slot.startTime;
                        btn.onclick = () => showFinalSelection(slot, displayDate);
                        slotsList.appendChild(btn);
                    });
                } else {
                    slotsList.innerHTML = '<p class="text-light">No slots available for this date.</p>';
                }
            } catch (err) {
                slotsList.innerHTML = '<p class="text-light">Failed to load slots.</p>';
            }
        }

        function showFinalSelection(slot, dateLabel) {
            selectedSlot = slot;
            const summary = document.getElementById('bookingSummary');
            const backdrop = document.getElementById('modalBackdrop');

            const start = new Date(slot.start);
            const end = new Date(slot.end);
            const durationMinutes = (end - start) / 60000;
            const price = (HOST_DATA.rate / 60) * durationMinutes;

            backdrop.style.display = 'block';
            summary.style.display = 'block';

            summary.innerHTML = `
                <div style="background: linear-gradient(135deg, #4f46e5 0%, #3b82f6 100%); padding: 1.5rem 2rem; color: white;">
                    <div style="display: flex; justify-content: space-between; align-items: start;">
                        <h3 style="font-size: 1.25rem; font-weight: 700; margin: 0; display: flex; align-items: center; gap: 0.5rem;">
                            <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
                            Confirm Booking
                        </h3>
                        <button onclick="closeModal()" style="background: rgba(255,255,255,0.2); border: none; cursor: pointer; color: white; width: 32px; height: 32px; border-radius: 50%; display: flex; align-items: center; justify-content: center; transition: all 0.2s;" onmouseover="this.style.background='rgba(255,255,255,0.3)'" onmouseout="this.style.background='rgba(255,255,255,0.2)'">
                            <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                        </button>
                    </div>
                </div>
                <div style="padding: 2rem;">
                    <div style="background: #f8fafc; border: 1px solid #f1f5f9; border-radius: 12px; padding: 1.25rem; margin-bottom: 2rem;">
                        <div style="display: flex; justify-content: space-between; margin-bottom: 0.75rem; font-size: 0.95rem;">
                            <span style="color: #64748b; font-weight: 500;">Date</span>
                            <span style="color: #0f172a; font-weight: 600;">${dateLabel}</span>
                        </div>
                        <div style="display: flex; justify-content: space-between; margin-bottom: 0.75rem; font-size: 0.95rem;">
                            <span style="color: #64748b; font-weight: 500;">Time</span>
                            <span style="color: #0f172a; font-weight: 600;">${slot.startTime} - ${slot.endTime}</span>
                        </div>
                        <div style="display: flex; justify-content: space-between; margin-bottom: 0.75rem; font-size: 0.95rem;">
                            <span style="color: #64748b; font-weight: 500;">Duration</span>
                            <span style="color: #0f172a; font-weight: 600;">${durationMinutes} mins</span>
                        </div>
                        <div style="display: flex; justify-content: space-between; margin-top: 0.75rem; padding-top: 0.75rem; border-top: 1px dashed #cbd5e1; font-size: 1.05rem;">
                            <span style="color: #0f172a; font-weight: 600;">Total Amount</span>
                            <span style="color: #10b981; font-weight: 700;">${HOST_DATA.currency} ${price.toFixed(2)}</span>
                        </div>
                    </div>
                    <button style="background: #4f46e5; color: white; border: none; width: 100%; border-radius: 12px; padding: 1rem; font-size: 1.1rem; font-weight: 600; cursor: pointer; transition: all 0.2s; box-shadow: 0 4px 12px rgba(79, 70, 229, 0.2);" onmouseover="this.style.background='#4338ca'; this.style.transform='translateY(-2px)'" onmouseout="this.style.background='#4f46e5'; this.style.transform='translateY(0)'" onclick="proceedToCheckout()">
                        Proceed to Checkout
                    </button>
                </div>
            `;
        }

        function closeModal() {
            document.getElementById('bookingSummary').style.display = 'none';
            document.getElementById('modalBackdrop').style.display = 'none';
        }

        function proceedToCheckout() {
            if (!selectedSlot) return;
            const params = new URLSearchParams({
                hostId: HOST_DATA.id,
                startTime: selectedSlot.start,
                endTime: selectedSlot.end
            });
            window.location.href = `/bookings/checkout?${params.toString()}`;
        }
    </script>

    <%- include('partials/footer') %>