<%- include('partials/header') %>

    <div class="container fade-in checkout-container">

        <style>
            .checkout-container {
                max-width: 520px;
                margin-top: 3rem;
                margin-bottom: 5rem;
                padding: 0 1rem;
            }

            .checkout-card {
                background: white;
                border-radius: 24px;
                box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.08), 0 0 0 1px rgba(0, 0, 0, 0.02);
                padding: 2.5rem;
                position: relative;
                overflow: hidden;
            }

            .checkout-grid {
                display: flex;
                flex-direction: column;
                gap: 2rem;
            }

            .checkout-left,
            .checkout-right {
                flex: 1;
                display: flex;
                flex-direction: column;
            }

            .checkout-right {
                justify-content: flex-start;
            }

            @media (min-width: 800px) {
                .checkout-container {
                    max-width: 900px;
                }

                .checkout-grid {
                    flex-direction: row;
                    gap: 3rem;
                }

                .checkout-left {
                    border-right: 1px solid #f1f5f9;
                    padding-right: 3rem;
                }
            }

            .checkout-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 6px;
                background: linear-gradient(135deg, #4f46e5 0%, #3b82f6 100%);
            }

            .section-header {
                font-size: 1.25rem;
                font-weight: 700;
                color: #1e293b;
                margin-bottom: 1.25rem;
                display: flex;
                align-items: center;
                gap: 8px;
            }

            /* Receipt Styling */
            .receipt-box {
                background: #f8fafc;
                border: 1px solid #f1f5f9;
                border-radius: 16px;
                padding: 1.5rem;
                margin-bottom: 2rem;
            }

            .receipt-row {
                display: flex;
                justify-content: space-between;
                margin-bottom: 0.85rem;
                font-size: 0.95rem;
            }

            .receipt-row:last-child {
                margin-bottom: 0;
                padding-top: 0.85rem;
                border-top: 1px dashed #cbd5e1;
                font-weight: 600;
                font-size: 1.05rem;
                color: #0f172a;
            }

            .receipt-label {
                color: #64748b;
                font-weight: 500;
            }

            .receipt-value {
                color: #334155;
                font-weight: 600;
                text-align: right;
            }

            /* Form Styling */
            .form-floating {
                position: relative;
                margin-bottom: 1.25rem;
            }

            .form-floating input {
                width: 100%;
                padding: 1rem 1rem 0.5rem 1rem;
                height: 3.5rem;
                border: 1px solid #e2e8f0;
                border-radius: 12px;
                background: white;
                font-size: 0.95rem;
                color: #1e293b;
                outline: none;
                transition: all 0.2s ease;
            }

            .form-floating label {
                position: absolute;
                top: 50%;
                left: 1rem;
                transform: translateY(-50%);
                color: #94a3b8;
                font-size: 0.95rem;
                pointer-events: none;
                transition: all 0.2s ease;
            }

            .form-floating input:focus,
            .form-floating input:not(:placeholder-shown) {
                border-color: #4f46e5;
                box-shadow: 0 0 0 4px rgba(79, 70, 229, 0.1);
            }

            .form-floating input:focus+label,
            .form-floating input:not(:placeholder-shown)+label {
                top: 0.85rem;
                font-size: 0.75rem;
                color: #4f46e5;
                font-weight: 600;
            }

            /* Currency and Payment Selection */
            .selection-grid {
                display: grid;
                grid-template-columns: 1fr 1fr;
                gap: 1rem;
                margin-bottom: 2rem;
            }

            .select-card {
                border: 2px solid #e2e8f0;
                border-radius: 12px;
                padding: 1rem;
                text-align: center;
                cursor: pointer;
                transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
                background: white;
                position: relative;
            }

            .select-card:hover {
                border-color: #cbd5e1;
                transform: translateY(-2px);
            }

            .select-card.active {
                border-color: #4f46e5;
                background: #eff6ff;
                box-shadow: 0 4px 12px rgba(79, 70, 229, 0.15);
            }

            .select-card h4 {
                margin: 0;
                color: #1e293b;
                font-size: 1.15rem;
                font-weight: 700;
            }

            .select-card small {
                color: #64748b;
                font-size: 0.8rem;
                font-weight: 500;
                display: block;
                margin-top: 0.25rem;
            }

            .gateway-row {
                display: flex;
                flex-direction: column;
                gap: 0.75rem;
                margin-bottom: 2rem;
            }

            .gateway-box {
                border: 2px solid #e2e8f0;
                border-radius: 12px;
                padding: 1rem 1.25rem;
                display: flex;
                align-items: center;
                cursor: pointer;
                transition: all 0.2s;
            }

            .gateway-box:hover {
                background: #f8fafc;
            }

            .gateway-box.active {
                border-color: #4f46e5;
                background: #eff6ff;
            }

            .gateway-box input[type="radio"] {
                margin-right: 1rem;
                transform: scale(1.2);
                accent-color: #4f46e5;
            }

            /* Button */
            .btn-pay {
                background: #4f46e5;
                color: white;
                border: none;
                padding: 1.15rem;
                border-radius: 12px;
                font-weight: 700;
                font-size: 1.1rem;
                width: 100%;
                margin-top: auto;
                transition: all 0.2s;
                cursor: pointer;
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .btn-pay:hover {
                background: #4338ca;
                transform: translateY(-2px);
                box-shadow: 0 10px 20px -5px rgba(79, 70, 229, 0.3);
            }

            .btn-pay:disabled {
                opacity: 0.7;
                cursor: not-allowed;
                transform: none;
            }

            /* Toast Notification */
            #toast-container {
                position: fixed;
                bottom: 20px;
                right: 20px;
                z-index: 9999;
                display: flex;
                flex-direction: column;
                gap: 10px;
            }

            .toast {
                background: white;
                padding: 1rem 1.5rem;
                border-radius: 12px;
                box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
                border-left: 5px solid #3b82f6;
                display: flex;
                align-items: center;
                gap: 12px;
                min-width: 300px;
                animation: slideIn 0.3s ease-out forwards;
                opacity: 0;
                transform: translateX(100%);
            }

            .toast.success {
                border-color: #10b981;
            }

            .toast.error {
                border-color: #ef4444;
            }

            .toast-message {
                font-size: 0.95rem;
                color: #1e293b;
                font-weight: 500;
            }

            @keyframes slideIn {
                to {
                    opacity: 1;
                    transform: translateX(0);
                }
            }

            @keyframes fadeOut {
                to {
                    opacity: 0;
                    transform: translateX(100%);
                }
            }

            @media (max-width: 600px) {
                .checkout-card {
                    padding: 1.5rem;
                }
            }
        </style>

        <div class="checkout-card">

            <div class="checkout-grid">

                <div class="checkout-left">
                    <h2 class="section-header">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: #4f46e5;">
                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                            <line x1="16" y1="2" x2="16" y2="6"></line>
                            <line x1="8" y1="2" x2="8" y2="6"></line>
                            <line x1="3" y1="10" x2="21" y2="10"></line>
                        </svg>
                        Complete Booking
                    </h2>

                    <div class="receipt-box">
                        <div class="receipt-row">
                            <span class="receipt-label">Host</span>
                            <span class="receipt-value">
                                <%= host.name %>
                            </span>
                        </div>
                        <div class="receipt-row">
                            <span class="receipt-label">Date & Time</span>
                            <span class="receipt-value" style="text-align: right;">
                                <%= start %>
                            </span>
                        </div>
                        <div class="receipt-row">
                            <span class="receipt-label">Duration</span>
                            <span class="receipt-value">
                                <%= duration %> Mins
                            </span>
                        </div>
                        <% if (isFree) { %>
                            <div class="receipt-row" style="color: #059669;">
                                <span class="receipt-label" style="color: #059669;">Amount</span>
                                <span class="receipt-value">FREE</span>
                            </div>
                            <% } %>
                    </div>

                    <h2 class="section-header" style="font-size: 1.15rem;">Your Details</h2>

                    <div class="form-floating">
                        <input type="text" id="customerName" placeholder=" " value="<%= user ? user.name : '' %>"
                            required>
                        <label for="customerName">Full Name</label>
                    </div>
                    <div class="form-floating">
                        <input type="email" id="customerEmail" placeholder=" " value="<%= user ? user.email : '' %>"
                            required>
                        <label for="customerEmail">Email Address</label>
                    </div>
                    <div class="form-floating">
                        <input type="tel" id="customerWhatsapp" placeholder=" " required>
                        <label for="customerWhatsapp">WhatsApp Number</label>
                    </div>
                </div>

                <div class="checkout-right">
                    <% if (!isFree) { %>
                        <h2 class="section-header" style="font-size: 1.15rem;">Setup Payment</h2>

                        <div class="selection-grid">
                            <div id="card-INR" class="select-card active" onclick="selectCurrency('INR')">
                                <h4>‚Çπ<%= amount.toFixed(2) %>
                                </h4>
                                <small>Pay in INR</small>
                            </div>
                            <div id="card-USD" class="select-card" onclick="selectCurrency('USD')">
                                <h4>$<%= amountUsd.toFixed(2) %>
                                </h4>
                                <small>Pay in USD</small>
                            </div>
                        </div>

                        <div class="gateway-row">
                            <div class="gateway-box active" onclick="selectGateway('razorpay')">
                                <input type="radio" id="razorpay" name="gateway" value="razorpay" checked>
                                <div style="flex:1;">
                                    <label for="razorpay"
                                        style="font-weight: 600; color:#1e293b; display:block; cursor:pointer;">Razorpay</label>
                                    <span style="font-size:0.8rem; color:#64748b;">UPI, Cards & NetBanking</span>
                                </div>
                            </div>
                            <div class="gateway-box" onclick="selectGateway('payu')">
                                <input type="radio" id="payu" name="gateway" value="payu">
                                <div style="flex:1;">
                                    <label for="payu"
                                        style="font-weight: 600; color:#1e293b; display:block; cursor:pointer;">PayU</label>
                                    <span style="font-size:0.8rem; color:#64748b;">International Cards</span>
                                </div>
                            </div>
                        </div>
                        <% } %>

                            <div style="margin-top: auto; padding-top: 1rem;">
                                <button id="rzp-button1" class="btn-pay" style="margin-top: 0;">
                                    <span>Confirm & Pay</span>
                                </button>

                                <div style="text-align: center; margin-top: 1rem; color: #94a3b8; font-size: 0.85rem;">
                                    üîí SSL Secured 256-bit Encryption
                                </div>
                            </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Container -->
    <div id="toast-container"></div>

    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <script>
        // Toast Function
        function showToast(message, type = 'info') {
            const container = document.getElementById('toast-container');
            const toast = document.createElement('div');
            toast.className = `toast ${type}`;

            let icon = '‚ÑπÔ∏è';
            if (type === 'success') icon = '‚úÖ';
            if (type === 'error') icon = '‚ö†Ô∏è';

            toast.innerHTML = `<span>${icon}</span><span class="toast-message">${message}</span>`;

            container.appendChild(toast);

            // Remove after 3 seconds
            setTimeout(() => {
                toast.style.animation = 'fadeOut 0.3s ease-in forwards';
                setTimeout(() => {
                    toast.remove();
                }, 300);
            }, 3000);
        }

        let selectedCurrency = 'INR';

        function selectCurrency(currency) {
            selectedCurrency = currency;
            document.querySelectorAll('.currency-card').forEach(el => el.classList.remove('selected-currency'));
            document.getElementById('card-' + currency).classList.add('selected-currency');
        }

        function selectGateway(gateway) {
            document.querySelectorAll('input[name="gateway"]').forEach(el => el.checked = false);
            document.getElementById(gateway).checked = true;

            document.querySelectorAll('.gateway-option').forEach(el => el.classList.remove('selected'));
            document.getElementById(gateway).closest('.gateway-option').classList.add('selected');

            updateButtonText();
        }

        function updateButtonText() {
            const gateway = document.querySelector('input[name="gateway"]:checked')?.value;
            const btn = document.getElementById('rzp-button1');
            const isFreeStr = "<%= isFree %>"; // Get isFree from server render
            const isFreeBooking = isFreeStr === "true";

            if (isFreeBooking) {
                btn.innerText = 'Confirm Booking';
                return;
            }

            if (gateway === 'payu') {
                btn.innerText = 'Pay with PayU';
            } else {
                btn.innerText = 'Pay & Book';
            }
        }

        function resetButton(btn, text) {
            btn.innerText = text;
            btn.disabled = false;
            btn.style.opacity = '1';
            btn.style.cursor = 'pointer';
        }

        document.getElementById('rzp-button1').onclick = async function (e) {
            e.preventDefault();

            const name = document.getElementById('customerName').value;
            const email = document.getElementById('customerEmail').value;
            const whatsapp = document.getElementById('customerWhatsapp').value;

            if (!name || !email || !whatsapp) {
                showToast('Please fill in all details (Name, Email, WhatsApp Number)', 'error');
                return;
            }

            const btn = document.getElementById('rzp-button1');
            const originalText = btn.innerText;
            const gateway = document.querySelector('input[name="gateway"]:checked')?.value || 'razorpay';

            btn.innerText = 'Processing...';
            btn.disabled = true;
            btn.style.opacity = '0.7';
            btn.style.cursor = 'wait';

            const payload = {
                hostId: '<%= host._id %>',
                startTime: '<%= startTime %>',
                endTime: '<%= endTime %>',
                currency: selectedCurrency,
                customerName: name,
                customerEmail: email,
                customerWhatsapp: whatsapp
            };

            try {
                if (gateway === 'payu') {
                    // --- PAYU FLOW ---
                    const res = await fetch('/bookings/create-payu-order', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    const data = await res.json();

                    if (data.error) {
                        showToast(data.error, 'error');
                        resetButton(btn, originalText);
                        return;
                    }

                    if (data.success && data.action) {
                        // Create hidden form and submit
                        const form = document.createElement('form');
                        form.method = 'POST';
                        form.action = data.action;

                        for (const key in data.params) {
                            const input = document.createElement('input');
                            input.type = 'hidden';
                            input.name = key;
                            input.value = data.params[key];
                            form.appendChild(input);
                        }

                        document.body.appendChild(form);
                        showToast('Redirecting to PayU...', 'success');
                        form.submit();
                        return; // Done
                    }

                } else {
                    // --- RAZORPAY / FREE FLOW ---
                    const res = await fetch('/bookings/create-order', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    const data = await res.json();

                    if (data.error) {
                        showToast(data.error, 'error');
                        resetButton(btn, originalText);
                        return;
                    }

                    if (data.isFree) {
                        showToast('Booking Confirmed!', 'success');
                        setTimeout(() => {
                            window.location.href = '/bookings/success';
                        }, 1000);
                        return;
                    }

                    var options = {
                        "key": data.key_id,
                        "amount": data.order.amount,
                        "currency": data.order.currency,
                        "name": "Gurubrahma",
                        "description": "Session Booking",
                        "order_id": data.order.id,
                        "redirect": true,
                        "callback_url": window.location.origin + "/bookings/verify-payment-redirect?booking_id=" + data.bookingId,
                        "prefill": {
                            "name": name,
                            "email": email,
                            "contact": whatsapp
                        },
                        "theme": { "color": "#4f46e5" },
                        "modal": {
                            "ondismiss": function () {
                                resetButton(btn, originalText);
                                showToast('Payment cancelled', 'info');
                            }
                        }
                    };
                    var rzp1 = new Razorpay(options);
                    rzp1.open();
                }

            } catch (err) {
                console.error(err);
                showToast('An unexpected error occurred. Please try again.', 'error');
                resetButton(btn, originalText);
            }
        }
    </script>

    <%- include('partials/footer') %>