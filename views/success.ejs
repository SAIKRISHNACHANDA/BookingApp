<%- include('partials/header') %>

    <style>
        .alert-card {
            background: var(--surface-color);
            border-radius: var(--radius);
            box-shadow: var(--shadow-lg);
            padding: 3rem 2rem;
            margin: 4rem auto;
            max-width: 450px;
            width: 90%;
            text-align: center;
            border-top: 6px solid;
            position: relative;
            overflow: hidden;
        }

        .alert-card.success-card {
            border-top-color: var(--success-color);
        }

        .alert-card.fail-card {
            border-top-color: var(--danger-color);
        }

        .alert-icon {
            width: 64px;
            height: 64px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            font-size: 2rem;
            color: white;
        }

        .success-card .alert-icon {
            background: var(--success-color);
            box-shadow: 0 0 20px rgba(16, 185, 129, 0.4);
        }

        .fail-card .alert-icon {
            background: var(--danger-color);
            box-shadow: 0 0 20px rgba(239, 68, 68, 0.4);
        }

        .alert-title {
            font-size: 1.75rem;
            font-weight: 800;
            color: var(--text-color);
            margin-bottom: 0.75rem;
            letter-spacing: -0.5px;
        }

        .alert-msg {
            color: var(--text-light);
            font-size: 1rem;
            line-height: 1.6;
            margin-bottom: 2rem;
        }

        .alert-btn {
            display: inline-block;
            width: 100%;
            padding: 0.85rem;
            font-weight: 600;
            border-radius: 999px;
            text-transform: capitalize;
            transition: all 0.2s;
        }

        .success-card .alert-btn {
            background: var(--primary-color);
            color: white;
            box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3);
        }

        .success-card .alert-btn:hover {
            background: var(--primary-dark);
            transform: translateY(-2px);
        }

        .fail-card .alert-btn {
            background: white;
            color: var(--danger-color);
            border: 2px solid var(--danger-color);
        }

        .fail-card .alert-btn:hover {
            background: #fef2f2;
        }

        @media (max-width: 480px) {
            .alert-card {
                padding: 2rem 1.5rem;
                margin: 2rem auto;
            }

            .alert-title {
                font-size: 1.5rem;
            }
        }
    </style>

    <div class="container fade-in" style="padding-bottom: 6rem;">
        <% if (typeof failed !=='undefined' && failed) { %>
            <div class="alert-card fail-card">
                <div class="alert-icon">✕</div>
                <h1 class="alert-title">Payment Failed</h1>
                <p class="alert-msg">Listen, something went wrong with your payment. Reason: <%= typeof reason
                        !=='undefined' ? reason : 'Unknown' %><br><br>No charges were fully captured. Please try booking
                        again.</p>
                <a href="/" class="alert-btn">Try Again</a>
            </div>
            <% } else { %>
                <div class="alert-card success-card">
                    <div class="alert-icon">✓</div>
                    <h1 class="alert-title">Booking Confirmed!</h1>
                    <p class="alert-msg">Your session has been successfully booked and the payment is
                        complete.<br><br>We've sent a confirmation email with all the details.</p>
                    <a href="/hosts/dashboard" class="alert-btn">Go to Dashboard</a>
                </div>
                <% } %>
    </div>

    <%- include('partials/footer') %>