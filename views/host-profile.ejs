    <script>
        // Use Data Attributes to pass EJS data safely to JS without linting issues
        const HOST_DATA = {
            id: '<%= host._id %>',
            username: '<%= host.username %>',
            rate: parseFloat('<%= host.hourlyRate || 0 %>'),
            currency: '<%= host.currency || "INR" %>'
        };

        let currentMonth = new Date();
        let selectedDate = new Date();
        let selectedSlot = null;
        let MONTH_AVAILABILITY = {};

        window.addEventListener('DOMContentLoaded', async () => {
            await fetchMonthAvailability(currentMonth.getFullYear(), currentMonth.getMonth());
            renderCalendar();
            const tz = Intl.DateTimeFormat().resolvedOptions().timeZone;
            const time = new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit', hour12: true }).toLowerCase().replace(' ', '');
            document.getElementById('timezoneText').innerText = `${tz} (${time})`;
        });

        async function fetchMonthAvailability(year, month) {
            try {
                // console.log(`[fetchMonthAvailability] Fetching for ${year}-${month + 1}`);
                const response = await fetch(`/hosts/api/hosts/${HOST_DATA.username}/month-availability?year=${year}&month=${month}`);
                if (!response.ok) throw new Error('Failed to fetch availability');
                MONTH_AVAILABILITY = await response.json();
                // console.log('[fetchMonthAvailability] Data:', MONTH_AVAILABILITY);
            } catch (err) {
                console.error('Error fetching availability:', err);
                MONTH_AVAILABILITY = {};
            }
        }

        function renderCalendar() {
            const grid = document.getElementById('calendarGrid');
            const monthDisplay = document.getElementById('monthDisplay');

            // Clear previous days
            const dayElements = grid.querySelectorAll('.day');
            dayElements.forEach(el => el.remove());

            const year = currentMonth.getFullYear();
            const month = currentMonth.getMonth();

            monthDisplay.innerText = new Date(year, month).toLocaleString('default', { month: 'long', year: 'numeric' });

            const firstDayOfMonth = new Date(year, month, 1).getDay();
            const daysInMonth = new Date(year, month + 1, 0).getDate();

            // Handle Monday start
            let startDay = firstDayOfMonth === 0 ? 6 : firstDayOfMonth - 1;

            for (let i = 0; i < startDay; i++) {
                const empty = document.createElement('div');
                empty.className = 'day empty';
                grid.appendChild(empty);
            }

            const today = new Date();
            today.setHours(0, 0, 0, 0);

            for (let i = 1; i <= daysInMonth; i++) {
                const dayDate = new Date(year, month, i);
                const dayEl = document.createElement('div');
                dayEl.className = 'day';
                dayEl.innerText = i;

                const dateLocal = dayDate.getFullYear() + '-' + String(dayDate.getMonth() + 1).padStart(2, '0') + '-' + String(dayDate.getDate()).padStart(2, '0');
                const dayOfWeek = dayDate.getDay();

                // Today's style
                if (dayDate.getTime() === today.getTime()) {
                    dayEl.classList.add('today');
                }

                // Selected day style
                if (dayDate.getTime() === selectedDate.getTime()) {
                    dayEl.classList.add('selected');
                }

                // Availability coloring logic
                const availability = MONTH_AVAILABILITY[dateLocal];

                if (dayDate >= today) {
                    if (availability && availability.isAvailable) {
                        dayEl.classList.add('available');
                        dayEl.classList.add('has-slots-dot'); // Dot is handled by CSS
                        dayEl.setAttribute('data-slots', availability.count);
                        dayEl.title = `${availability.count} slots available`;
                        dayEl.onclick = () => selectDate(dayDate, dayEl);
                    } else {
                        dayEl.classList.add('disabled');
                    }
                } else {
                    dayEl.classList.add('disabled');
                }

                grid.appendChild(dayEl);
            }
        }

        async function prevMonth() {
            currentMonth.setMonth(currentMonth.getMonth() - 1);
            await fetchMonthAvailability(currentMonth.getFullYear(), currentMonth.getMonth());
            renderCalendar();
        }

        async function nextMonth() {
            currentMonth.setMonth(currentMonth.getMonth() + 1);
            await fetchMonthAvailability(currentMonth.getFullYear(), currentMonth.getMonth());
            renderCalendar();
        }

        async function selectDate(date, element) {
            document.querySelectorAll('.day').forEach(d => d.classList.remove('selected'));
            element.classList.add('selected');
            selectedDate = date;

            const dateString = date.getFullYear() + '-' + String(date.getMonth() + 1).padStart(2, '0') + '-' + String(date.getDate()).padStart(2, '0');
            const displayDate = date.toLocaleDateString('default', { weekday: 'long', month: 'long', day: 'numeric' });
            document.getElementById('selectedDateLabel').innerText = displayDate;

            const slotsList = document.getElementById('slotsList');
            slotsList.innerHTML = '<p class="loading">Finding available times...</p>';

            try {
                const response = await fetch(`/hosts/api/hosts/${HOST_DATA.username}/availability?date=${dateString}`);
                const data = await response.json();

                if (data.slots && data.slots.length > 0) {
                    slotsList.innerHTML = '';
                    data.slots.forEach(slot => {
                        const btn = document.createElement('button');
                        btn.className = 'slot-btn';
                        btn.innerText = slot.startTime;
                        btn.onclick = () => showFinalSelection(slot, displayDate);
                        slotsList.appendChild(btn);
                    });
                } else {
                    slotsList.innerHTML = '<p class="text-light">No slots available for this date.</p>';
                }
            } catch (err) {
                slotsList.innerHTML = '<p class="text-light">Failed to load slots.</p>';
            }
        }

        function showFinalSelection(slot, dateLabel) {
            selectedSlot = slot;
            const summary = document.getElementById('bookingSummary');
            const backdrop = document.getElementById('modalBackdrop');

            const start = new Date(slot.start);
            const end = new Date(slot.end);
            const durationMinutes = (end - start) / 60000;
            const price = (HOST_DATA.rate / 60) * durationMinutes;

            backdrop.style.display = 'block';
            summary.style.display = 'block';

            summary.innerHTML = `
                <div style="background: linear-gradient(135deg, #4f46e5 0%, #3b82f6 100%); padding: 1.5rem 2rem; color: white;">
                    <div style="display: flex; justify-content: space-between; align-items: start;">
                        <h3 style="font-size: 1.25rem; font-weight: 700; margin: 0; display: flex; align-items: center; gap: 0.5rem;">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
                            Confirm Booking
                        </h3>
                        <button onclick="closeModal()" style="background: rgba(255,255,255,0.2); border: none; cursor: pointer; color: white; width: 32px; height: 32px; border-radius: 50%; display: flex; align-items: center; justify-content: center; transition: all 0.2s;" onmouseover="this.style.background='rgba(255,255,255,0.3)'" onmouseout="this.style.background='rgba(255,255,255,0.2)'">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                        </button>
                    </div>
                </div>
                <div style="padding: 2rem;">
                    <div style="background: #f8fafc; border: 1px solid #f1f5f9; border-radius: 12px; padding: 1.25rem; margin-bottom: 2rem;">
                        <div style="display: flex; justify-content: space-between; margin-bottom: 0.75rem; font-size: 0.95rem;">
                            <span style="color: #64748b; font-weight: 500;">Date</span>
                            <span style="color: #0f172a; font-weight: 600;">${dateLabel}</span>
                        </div>
                        <div style="display: flex; justify-content: space-between; margin-bottom: 0.75rem; font-size: 0.95rem;">
                            <span style="color: #64748b; font-weight: 500;">Time</span>
                            <span style="color: #0f172a; font-weight: 600;">${slot.startTime} - ${slot.endTime}</span>
                        </div>
                        <div style="display: flex; justify-content: space-between; margin-bottom: 0.75rem; font-size: 0.95rem;">
                            <span style="color: #64748b; font-weight: 500;">Duration</span>
                            <span style="color: #0f172a; font-weight: 600;">${durationMinutes} mins</span>
                        </div>
                        <div style="display: flex; justify-content: space-between; margin-top: 0.75rem; padding-top: 0.75rem; border-top: 1px dashed #cbd5e1; font-size: 1.05rem;">
                            <span style="color: #0f172a; font-weight: 600;">Total Amount</span>
                            <span style="color: #10b981; font-weight: 700;">${HOST_DATA.currency} ${price.toFixed(2)}</span>
                        </div>
                    </div>
                    <button style="background: #4f46e5; color: white; border: none; width: 100%; border-radius: 12px; padding: 1rem; font-size: 1.1rem; font-weight: 600; cursor: pointer; transition: all 0.2s; box-shadow: 0 4px 12px rgba(79, 70, 229, 0.2);" onmouseover="this.style.background='#4338ca'; this.style.transform='translateY(-2px)'" onmouseout="this.style.background='#4f46e5'; this.style.transform='translateY(0)'" onclick="proceedToCheckout()">
                        Proceed to Checkout
                    </button>
                </div>
            `;
        }

        function closeModal() {
            document.getElementById('bookingSummary').style.display = 'none';
            document.getElementById('modalBackdrop').style.display = 'none';
        }

        function proceedToCheckout() {
            if (!selectedSlot) return;
            const params = new URLSearchParams({
                hostId: HOST_DATA.id,
                startTime: selectedSlot.start,
                endTime: selectedSlot.end
            });
            window.location.href = `/bookings/checkout?${params.toString()}`;
        }
    </script>

